---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="友链">
  <div class="friends-list">
    <!-- 在这里添加你的友链列表 -->
    <div class="friend-card">
      <h2>朋友们</h2>
      <div class="friend-items">
        <a href="https://yoake.cc" target="_blank" class="friend-item">
          <img src="https://cdn.jsdelivr.net/gh/YOYOYOAKE/YOYOPics/avatar.png" alt="YOYOArticle" />
          <div class="friend-info">
            <h3>YOYOArticle</h3>
            <p>𝑩𝒊𝒓𝒅𝒔 𝒂𝒓𝒆 𝒃𝒐𝒓𝒏 𝒘𝒊𝒕𝒉 𝒏𝒐 𝒔𝒉𝒂𝒌𝒍𝒆𝒔.</p>
          </div>
        </a>

        <a href="https://www.ajohn.top/" target="_blank" class="friend-item">
          <img src="https://github.com/zzyAJohn.png" alt="AJohn Blog" />
          <div class="friend-info">
            <h3>AJohn Blog</h3>
            <p>Never, ever, ever give up.</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .friends-list {
    padding: 20px;
  }

  .friend-card {
    background: #fff;
    border-radius: 8px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .friend-items {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .friend-item {
    display: flex;
    align-items: center;
    padding: 15px;
    border-radius: 8px;
    background: #f8f9fa;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .friend-item:hover {
    transform: translateY(-3px);
  }

  .friend-item img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-right: 15px;
  }

  .friend-info h3 {
    margin: 0;
    font-size: 1.1em;
    color: #333;
  }

  .friend-info p {
    margin: 5px 0 0;
    font-size: 0.9em;
    color: #666;
  }
</style>
