---
import BaseLayout from "../../layouts/BaseLayout.astro";

// 定义文章的类型接口
interface BlogPost {
  frontmatter: {
    title: string;
    pubDate: string;
    description?: string;
  };
  url: string;
}
// 动态获取所有文章
const posts = await Promise.all(
  Object.values(
    import.meta.glob<BlogPost>("/src/pages/posts/thinking/*.md", { eager: true }),
  ),
);


// 按发布日期排序
const sortedPosts = posts.sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).getTime() -
    new Date(a.frontmatter.pubDate).getTime(),
);

// 分页设置
// 修改分页逻辑
const postsPerPage = 7;
const currentPage = Number(Astro.params.page || "1"); // 改用 params
const totalPages = Math.ceil(sortedPosts.length / postsPerPage);
const pageStart = (currentPage - 1) * postsPerPage;
const pageEnd = pageStart + postsPerPage;
const currentPosts = sortedPosts.slice(pageStart, pageEnd);
---

<BaseLayout title="思考">
  <section class="posts">
    {
      currentPosts.map((post) => (
        <article class="post-preview">
          <h2>
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <div class="post-meta">
            <time>
              {new Date(post.frontmatter.pubDate).toLocaleDateString()}
            </time>
            {post.frontmatter.type && (
              <span class="type">{post.frontmatter.type}</span>
            )}
          </div>
        </article>
      ))
    }
  </section>

  <nav class="pagination">
    {
      currentPage > 1 && (
        <a href={`/thinking/page/${currentPage - 1}`} class="prev">
          上一页
        </a>
      )
    }
    <span class="current">第 {currentPage} 页 / 共 {totalPages} 页</span>
    {
      currentPage < totalPages && (
        <a href={`/thinking/page/${currentPage + 1}`} class="next">
          下一页
        </a>
      )
    }
  </nav>
</BaseLayout>

<style>
  .posts {
    display: grid;
    gap: 0.5rem;
    margin: 1rem 0;
  }

  .post-preview {
    padding: 1rem;
    border-bottom: 1px solid #eee;
  }

  .post-meta {
    color: #666;
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  .type {
    margin-left: 1rem;
    padding: 0.2rem 0.5rem;
    background: #f0f0f0;
    border-radius: 4px;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover {
    color: #666;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
    padding: 1rem;
  }

  .pagination a {
    padding: 0.5rem 1rem;
    border: 1px solid #eee;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .pagination a:hover {
    background: #f5f5f5;
  }

  .current {
    color: #666;
  }
</style>
