<style>
  .github-link {
    margin: 1rem 0;
  }
  
  .github-icon {
    fill: currentColor;
    transition: transform 0.2s ease;
  }
  
  .github-link a:hover .github-icon {
    transform: scale(1.1);
  }
</style>
</BaseLayout>
