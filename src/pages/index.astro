---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greeting from "../components/Greeting";

const pageTitle = "你好";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>我是Zephyr</h2>
  <h2>我超棒的博客副标题</h2>
<div class="recent-posts">
  <h3>最新文章</h3>
  <ul>
    {
      (await Astro.glob('./posts/{algorithm,interview,thinking}/*.{md,mdx}')).sort(

        (a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime()
      ).slice(0, 5).map(post => (
        <li>
          <a href={post.url}>
            {post.frontmatter.title}
          </a>
          <span class="post-date">
            {new Date(post.frontmatter.pubDate).toLocaleDateString('zh-CN')}
          </span>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .recent-posts {
    margin: 2rem 0;
  }

  .recent-posts h3 {
    margin-bottom: 1rem;
  }

  .recent-posts ul {
    list-style: none;
    padding: 0;
  }

  .recent-posts li {
    margin-bottom: 0.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .recent-posts a {
    color: inherit;
    text-decoration: none;
  }

  .recent-posts a:hover {
    text-decoration: underline;
  }

  .post-date {
    color: #666;
    font-size: 0.9em;
  }
</style>
