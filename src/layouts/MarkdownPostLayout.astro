---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <h1>{frontmatter.title}</h1>
  <article class="post-content">
    <div class="post-meta">
      <p>{frontmatter.pubDate.toString().slice(0,10)}</p>
      <p><em>{frontmatter.description}</em></p>
    </div>
    <div class="content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .post-content {
    max-width: 85ch;
    margin: 0 auto;
    padding: 2rem;  
    font-size: 1.16rem;  /* 设置基础字体大小 */
  }

  .content {
    line-height: 1.8;         /* 增加行高 */
    letter-spacing: 0.05em;   /* 增加字间距 */
    word-spacing: 0.1em;      /* 增加词间距 */
  }

  .content :global(p) {
    margin-bottom: 1.1em;     /* 段落间距 */
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .post-meta {
    color: #666;
    margin-bottom: 2rem;
  }
</style>
