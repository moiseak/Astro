---
const allPosts = Object.values(
  import.meta.glob("../pages/posts/Blog/*.md", { eager: true })
);
const sortedPosts = allPosts.sort((a: any, b: any) => {
  const dateA: any = new Date(a.frontmatter.pubDate);
  const dateB: any = new Date(b.frontmatter.pubDate);
  return dateB - dateA;
});
---

<section class="Post-section">
  <h3 class="Post-title">Posts</h3>
  <div class="Post-content">
    <ul class="post-list">
      {sortedPosts.slice(0, 8).map((post: any) => (
        <li class="post-item" key={post.frontmatter.title}>
          <a class="post-link" href={post.url ?? `/posts/${post.frontmatter.slug ?? ''}`}>
            <time class="post-date">
              {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' })}
            </time>
            <span class="post-title-text">{post.frontmatter.title}</span>
            <span class="post-arrow" aria-hidden="true">›</span>
          </a>
        </li>
      ))}
    </ul>

    <div class="more-wrap">
      <a class="more-link" href="/posts">More Posts <span class="more-arrow" aria-hidden="true">›</span></a>
    </div>
  </div>
</section>

<style>
  .Post-section {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2rem;
    max-width: 2600px;
    margin: 0 auto;
    align-items: flex-start;
  }

  .Post-title {
    font-size: 1.2rem;
    font-weight: 700;
    width: 120px;
    min-width: 120px;
    color: #1a1a1a;
  }

  .Post-content {
    flex: 1;
    color: #4a4a4a;
    font-size: 1rem;
    line-height: 1;
    padding-top: 0.6rem;
  }

  /* 列表样式 */
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 1rem;
  }

  .post-item { }

  .post-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.2rem;
    border-radius: 12px;
    background: rgba(255,255,255,0.8);
    border: 1px solid rgba(0,0,0,0.06);
    text-decoration: none;
    color: inherit;
  }

  .post-date {
    flex: 0 0 10rem;
    font-family: monospace;
    color: #6b6b6b;
    font-size: 0.95rem;
  }

  .post-title-text {
    flex: 1;
    font-size: 1.05rem;
    color: #111;
  }

  .post-arrow {
    flex: 0 0 1.4rem;
    color: #9a9a9a;
    font-size: 1.4rem;
    text-align: right;
  }

  .more-wrap {
    margin-top: 1rem;
    display: flex;
    justify-content: flex-end; /* 右对齐 */
  }

  .more-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.9rem;
    border-radius: 12px;
    background: rgba(255,255,255,0.9);
    border: 1px solid rgba(0,0,0,0.06);
    text-decoration: none;
    font-weight: 600;
    color: #333;
  }

  .more-arrow {
    color: #9a9a9a;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .Post-section {
      flex-direction: column;
      gap: 1rem;
    }
    .Post-title {
      width: 100%;
      min-width: auto;
    }
    .post-link {
      padding: 0.9rem;
    }
    .post-date { flex: 0 0 9rem; font-size: 0.9rem; }
    .more-wrap { justify-content: flex-end; }
  }
</style>